---
layout: layouts/no-sidebar.njk
---

<h1>{{ title }}</h1>

<p class="metadata">
  <time datetime="{{ date | htmlDateString }}">
    {{ date | readableDate }}
  </time> &middot;

  {% for tag in tags | filterTagList %}
    {% set tagUrl %}/projects/tags/{{ tag | slug }}/{% endset %}
    <a href="{{ tagUrl | url }}" class="tag">#{{ tag }}</a>
  {% endfor %}
</p>

{{ content | safe }}
