<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Analytics -->
    <script defer data-domain="mattmcadams.com" src="https://plausible.io/js/script.js"></script>

    <!-- Author / Humans.txt -->
    <link type="text/plain" rel="author" href="/humans.txt" />

    <!-- METADADA -->
      {% if title %}
        <title>{{title}} | {{metadata.title}}</title>
      {%else%}
        <title>{{metadata.title}}</title>
      {%endif%}
    {# <title>{{ title or metadata.title }}</title> #}
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="og:title" content="{{title or metadata.title}}">
    <meta name="og:description" content="{{ description or metadata.description }}">
    <meta name="og:image" content="{{ thumbnail or metadata.thumbnail }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{title or metadata.title}}">
    <meta name="twitter:description" content="{{description or metadata.description}}">
    <meta name="twitter:image" content="{{thumbnail or metadata.thumbnail}}">

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="{{ '/assets/style/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/style/mattmcadams.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/style/prism-theme.css' | url }}">

    <!-- FEEDS -->
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <div id="app" class="page">

      <!--<div class="decorative-bar"></div>-->

      <header>
        <nav class="top-nav"><ul class="nav container container-wide">
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><a href="/now">Now</a></li>
          <li class="nav-item"><a href="/projects">Projects</a></li>
          <li class="nav-item"><a href="/posts">Posts</a></li>
          <li class="nav-item"><a href="/bookshelf">Bookshelf</a></li>
          <li class="nav-item"><a href="/quotes">Quotes</a></li>
          <li class="nav-item"><a href="https://donate.stripe.com/7sIeVd6E2dAbdeU5kk">Support my work</a></li>
        </ul></nav>
      </header>

      {{ content | safe }}

      <footer class="container container-wide">
        <p>&copy; 2024 Matthew McAdams &middot;
          <a href="https://webring.xxiivv.com/#mattmcadams" target="_blank" rel="noopener">
            <img style="height: 1em; width: 1em; margin: 0; display: inline-block; position: relative; top: 0.15em" src="https://webring.xxiivv.com/icon.black.svg" alt="XXIIVV webring"/>
          </a>
        </p>
      </footer>

    </div>
  </body>
</html>
